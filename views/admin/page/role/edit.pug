extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(3000)
  +alert-success(5000)
  h1(class="mb-4") Chỉnh sửa người dùng
  form(
    action=`/admin/roles/edit/${records.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="tittle") Phân quyền
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=records.title     
      )
    div(class="form-group")
      label(for="description") Mô tả
      input(
        type="text"
        class="form-control"
        id="description"
        name="description"     
        value=records.description  
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật 