extends ../../layout/default.pug
block main
  
  h1(class="mb-4") Thêm mới danh mục sản phẩm
  form(
    action="/admin/roles/create"
    method="POST"
  )
    div(class="form-group")
      label(for="tittle") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"      
      )
    div(class="form-group")
      label(for="description") Mô tả
      input(
        type="text"
        class="form-control"
        id="description"
        name="description"      
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới