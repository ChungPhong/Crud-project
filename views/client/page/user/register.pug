extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug
include ../../mixins/alert.pug

block main 
  +alert-error(3000)
  +alert-success(5000)
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Đăng kí tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          div(class="form-group")
            label(for="fullName") Họ và tên
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName" 
              required     
            )   
          div(class="form-group mt-4")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email" 
              required     
            )
          div(class="form-group mt-4")
            label(for="email") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"               
              required      
            )
          div(class="form-group mt-4")
            button(
              type="submit"
              class="btn btn-primary"
            ) Đăng kí
        